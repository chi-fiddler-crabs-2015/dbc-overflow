<!DOCTYPE html>
<html>
<head>
  <title>DbcOverflow</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all'%>
</head>
<body>

  <div class="topbar">
    <div class="home-nav">
      <%=link_to "DbcOverflow", root_path, :id => "logo" %>
      <%if current_user %>
      <div id="user-menu">
        <%= link_to "BrowseTopics", tags_path %>
        <%= link_to "NewQuestion", new_question_path %>
        <%= link_to "Logout", logout_path%>
      <%else%>
      <div id="login"%>
        <%= link_to "BrowseTopics", tags_path %>
        <%=link_to "Sign Up", new_user_path%>
        <%=link_to "Login", login_path %>
      </div>
      <%end%>
      </div>
    </div>
  </div>

<%= yield %>

</body>
</html>
